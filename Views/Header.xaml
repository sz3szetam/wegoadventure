<UserControl x:Class="KretaBasicSchoolSystem.Desktop.Views.Header"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:KretaBasicSchoolSystem.Desktop.Views"
             mc:Ignorable="d" 
             d:DesignHeight="35" d:DesignWidth="800">
    <!--Header -->
    <Border Background="{StaticResource backgroundPrimaryColor}">
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <!-- User options -->
            <local:UserOption Grid.Column="1"/>
            <!--Caption -->
            <local:Caption Grid.Column="0" />

        </Grid>
    </Border>
</UserControl>
